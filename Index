<script>
    function grabar(idInput, boton) {
        // Validaci√≥n de compatibilidad
        if (!('webkitSpeechRecognition' in window) && !('SpeechRecognition' in window)) {
            alert("Tu navegador no soporta dictado de voz. Prueba Chrome o Edge.");
            return;
        }

        const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
        const reconocimiento = new SpeechRecognition();

        reconocimiento.lang = "es-MX"; // Espa√±ol M√©xico
        reconocimiento.interimResults = false;

        // Feedback visual
        boton.classList.add('grabando');

        reconocimiento.onresult = (event) => {
            const texto = event.results[0][0].transcript;
            let input = document.getElementById(idInput);
            
            // L√≥gica simple para limpiar edad si el usuario dice "tengo 30 a√±os"
            if(idInput === 'edad') {
                input.value = texto.replace(/\D/g,''); // Deja solo n√∫meros
            } else {
                input.value = texto; // Texto normal
            }
        };

        reconocimiento.onspeechend = () => {
            reconocimiento.stop();
            boton.classList.remove('grabando');
        };

        reconocimiento.onerror = (event) => {
            console.error("Error:", event.error);
            boton.classList.remove('grabando');
            if(event.error === 'not-allowed') {
                alert("Permiso de micr√≥fono denegado. Revisa la configuraci√≥n del navegador.");
            }
        };

        reconocimiento.start();
    }
</script>

